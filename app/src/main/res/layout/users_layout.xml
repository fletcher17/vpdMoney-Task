<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:paddingTop="10dp"
    android:background="@color/white"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#882E673D"
        android:textSize="15sp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Name:"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nameValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:text="Text"
        android:fontFamily="@font/merriweather_italic"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/nameTv"
        app:layout_constraintTop_toTopOf="@+id/nameTv"/>

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#882E673D"
        android:textSize="15sp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Username:"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/userNameValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_italic"
        android:text="Text"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/usernameTv"
        app:layout_constraintTop_toTopOf="@+id/usernameTv"/>

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#882E673D"
        android:textSize="15sp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Email:"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/usernameTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/emailValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_italic"
        android:text="Text"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/emailTv"
        app:layout_constraintTop_toTopOf="@+id/emailTv"/>

</androidx.constraintlayout.widget.ConstraintLayout>